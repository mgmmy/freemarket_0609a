%body
  .information-container
    .infomation-header
      .infomation-header--logo
        = link_to image_tag(src= "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1905591235", class: "header--mercari"), root_path
          
      //配送状況
      .progress-bar
        %ul.progress-bar--bar
          %li.through#through
            会員情報
            .progress-status
            .progress-status_bar
          %li.through#through
            電話番号認証
            .progress-status
            .progress-status_bar
          %li.through#through
            お届け住所入力
            .progress-status
            .progress-status_bar
          %li.through#through
            支払い情報
            .progress-status
            .progress-status_bar--last
          %li.active#active
            完了
            .progress-status
            

    .cc--main
      .howtopay__mainbox
        //メインの上のだん
        .howtopay__mainbox__upper
          .howtopay__upper--message 会員登録完了
        //メインの下の段
        .howtopay__mainbox__main
          .howtopay__main
            .howtopay--name
              .howtopay--name--name カード番号
              .howtopay--name--red 必須

        //次へ進む
            .howtopay--next
              = link_to "次へ進む", complete_users_path, class: "btn btn-howtopay--next"
            
    .howtopay--footer
      = render partial: 'users/shared/registraion-footer'