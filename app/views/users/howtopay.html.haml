%body
  .information-container
    .infomation-header
      .infomation-header--logo
        = link_to image_tag(src= "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1905591235", class: "header--mercari"), root_path
          
      //配送状況
      .progress-bar
        %ul.progress-bar--bar
          %li.through#through
            会員情報
            .progress-status
            .progress-status_bar
          %li.through#through
            電話番号認証
            .progress-status
            .progress-status_bar
          %li.through#through
            お届け住所入力
            .progress-status
            .progress-status_bar
          %li.active#active
            支払い情報
            .progress-status
            .progress-status_bar--last
          %li.end#end 
            完了
            .progress-status
            

    .howtopay--main
      .howtopay__mainbox
        //メインの上のだん
        .howtopay__mainbox__upper
          .howtopay__upper--message 支払い方法
        //メインの下の段
        .howtopay__mainbox__main
          .howtopay__main
            .howtopay--name
              .howtopay--name--name カード番号
              .howtopay--name--red 必須
            %input{type: "name", placeholder: "半角数字のみ"}
            %ul.howtopay--card
              %li.card
                = image_tag("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQlmdIAmwSx3jMGfpDrxpUibA5ETXuXQ2bBhigYFa7yToTXkG58KQ", class: "card")
            .howtopay--name
              .howtopay--name--name 有効期限
              .howtopay--name--red 必須
              //プルダウン
              .howtopay__card
                .howtopay__card--month
                  %select{:required => ""}
                    %option{:value => "1"} 01
                    %option{:value => "2"} 02
                    %option{:value => "3"} 03
                    %option{:value => "4"} 04
                    %option{:value => "5"} 05
                    %option{:value => "6"} 06
                    %option{:value => "7"} 07
                    %option{:value => "8"} 08
                    %option{:value => "9"} 09 
                    %option{:value => "10"} 10
                    %option{:value => "11"} 11
                    %option{:value => "12"} 12
                  .card__month--icon
                    = fa_icon("chevron-down") 
                  .card__month--month 月
                .howtopay__card--month
                  %select{:required => ""}
                    %option{:value => "1"} 19
                    %option{:value => "2"} 20
                    %option{:value => "3"} 21
                    %option{:value => "4"} 22
                    %option{:value => "5"} 23
                    %option{:value => "6"} 24
                    %option{:value => "7"} 25
                    %option{:value => "8"} 26
                    %option{:value => "9"} 27 
                    %option{:value => "10"} 28
                    %option{:value => "11"} 29
                    %option{:value => "12"} 30
                  .card__year--icon
                    = fa_icon("chevron-down") 
                  .card__year--month 年
            //セキュリティコード
            .howtopay--name
              .howtopay--name--name セキュリティコード
              .howtopay--name--red 必須
            %input{type: "number", placeholder: "カード背面4桁もしくは3桁の番号"}
            //カード背面の番号とは
            .howtopay--what カード背面の番号とは
            //次へ進む
            .howtopay--next
              = link_to "次へ進む", complete_users_path, class: "btn btn-howtopay--next"
            
    .howtopay--footer
      = render partial: 'users/shared/registraion-footer'

