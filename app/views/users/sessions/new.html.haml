//ヘッダー部分
.registration__container
  .registration__header
    %h1.registration__header--logo
      = image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1881812696')
  //メイン部分
  .login__main
    .login__mainbox
      //メイン部分の上の段
      .login__mainbox__upper
        .login__upper--message アカウントをお持ちでない方はこちら
        .login__upper--registration
          =link_to '新規会員登録', new_user_registration_path, class: "btn btn-login"
      //メイン部分の下の段
      .lonin_mainbox__bottom
        .login__bottom--first
          //リンク先はfacebookに変える
          = link_to edit_user_registration_path,class: "btn btn-registration--facebook" do
            %i.fa.fa-facebook-square Facebookでログイン
        .login__bottom--second
          //リンク先はgoogleにか変える
          = link_to edit_user_registration_path, class: "btn btn-registration--google" do
            %i.fa.fa-google Googleでログイン
        //入力欄
        .login__inputbox
          .login--email
            %input{:name => "email", :autofocus => true, :autocomplete => "email"}
          .login--password
            %input{:name => "password", :autocomplete => "current-password"}


