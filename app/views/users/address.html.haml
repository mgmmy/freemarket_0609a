%body
  .information-container
    .infomation-header
      .infomation-header--logo
        = link_to image_tag(src= "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1905591235", class: "header--mercari"), root_path
          
      //配送状況
      .progress-bar
        %ul.progress-bar--bar
          %li.through#through
            会員情報
            .progress-status
            .progress-status_bar
          %li.through#through
            電話番号認証
            .progress-status
            .progress-status_bar
          %li.active#active
            お届け住所入力
            .progress-status
            .progress-status_bar
          %li.payment#payment 
            支払い情報
            .progress-status
            .progress-status_bar--last
          %li.end#end 
            完了
            .progress-status
            

    .address--main
      .address__mainbox
        //メインの上のだん
        .address__mainbox__upper
          .address__upper--message 配送元・お届け先住所入力
        //メインの下の段
        .address__mainbox__main
          .address__main
            .address--name
              .address--name--name お名前
              .address--name--red 必須
            %input{type: "name", placeholder: "例）山田"}
            %input{type: "name", placeholder: "例）彩"}
            .address--name
              .address--name--name お名前
              .address--name-red 必須
            %input{type: "name", placeholder: "例）ヤマダ"}
            %input{type: "name", placeholder: "例）アヤ"}
            .address--name
              .address--name--name 郵便番号
              .address--name--red 必須
            %input{type: "number", placeholder: "例）123-4567"}
            .address--prefecture
              .address--prefecture--name 都道府県
              .address--prefecture--red 必須
              //非同期で選択できるようにする
            %input{type: "text", placeholder: "北海道"}

            .address--name
              .address--name--name 市町村
              .address--name--red 必須
            %input{type: "text", placeholder: "例）横浜市緑区"}
            .address--name
              .address--name--name 番地
              .address--name--red 必須
            %input{type: "number", placeholder: "例）青山1-1-1"}
            .address--building
              .address--building--name 建物名
              .address--building--grey 任意
            %input{type: "text", placeholder: "例）柳ビル 103"}
            .address--building
              .address--building--name 電話
              .address--building--grey 任意
            %input{type: "number", placeholder: "例）09012345678"}

            //次へ進む
            .address--next
              = link_to "次へ進む", howtopay_users_path, class: "btn btn-address--next"
            




    .address--footer
      = render partial: 'users/shared/registraion-footer'