%body
  .information-container
    .infomation-header
      .infomation-header--logo
        = link_to image_tag(src= "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1905591235", class: "header--mercari"), root_path
          
      //配送状況
      .progress-bar
        %ul.progress-bar--bar
          %li.through#through
            会員情報
            .progress-status
            .progress-status_bar
          %li.through#through
            電話番号認証
            .progress-status
            .progress-status_bar
          %li.active#active
            お届け住所入力
            .progress-status
            .progress-status_bar
          %li.payment#payment 
            支払い情報
            .progress-status
            .progress-status_bar--last
          %li.end#end 
            完了
            .progress-status
            

    .address--main
      .address__mainbox
        //メインの上のだん
        .address__mainbox__upper
          .address__upper--message 配送元・お届け先住所入力
        //メインの下の段
        .address__mainbox__main
          -# =link_to address_create_path
          =form_for :post, url: '/address/create' do |f|
          
            .address__main
              .address--name
                = f.label 'お名前', class: "address--name--name"
                = f.label '必須',class: "address--name--red"
                = f.text_field :last_name, placeholder: '例）山田'
                = f.text_field :first_name, placeholder: '例）彩'
              .address--name
                = f.label 'お名前カナ', class: "address--name--name"
                = f.label '必須',class: "address--name--red"
                = f.text_field :last_name_kana, placeholder: '例）ヤマダ'
                = f.text_field :first_name_kana, placeholder: '例）アヤ'
              .address--name
                = f.label '郵便番号', class: "address--name--name"
                = f.label '必須',class: "address--name--red"
                -# = f.text_field placeholder: '例）123-4567'
              .address--prefecture
                .address--prefecture--name 都道府県
                .address--prefecture--red 必須
                //都道府県
                .address--prefecture--choice
                  = select_tag 'card[month]', options_for_select(["北海道", "青森", "岩手", "宮城", "秋田", "山形", "福島", "茨城", "栃木", "群馬", "埼玉", "千葉", "東京", "神奈川", "新潟", "富山", "石川", "福井", "山梨", "長野", "岐阜", "静岡", "愛媛", "三重", "滋賀", "京都", "大阪", "兵庫", "奈良", "和歌山", "鳥取", "島根", "岡山", "広島", "山口", "徳島", "香川", "愛媛", "高知", "福岡", "佐賀", "長崎", "熊本", "大分", "宮城", "鹿児島", "沖縄" ]) 
                .address--icon
                  = fa_icon("chevron-down") 


              .address--name
                .address--name--name 市町村
                .address--name--red 必須
              %input{type: "text", placeholder: "例）横浜市緑区"}
              .address--name
                .address--name--name 番地
                .address--name--red 必須
              %input{type: "number", placeholder: "例）青山1-1-1"}
              .address--building
                .address--building--name 建物名
                .address--building--grey 任意
              %input{type: "text", placeholder: "例）柳ビル 103"}
              .address--building
                .address--building--name 電話
                .address--building--grey 任意
              %input{type: "number", placeholder: "例）09012345678"}

              //次へ進む
              .address--next
                = f.submit "次へ進む", class: "btn-address--next"
              




    .address--footer
      = render partial: 'users/shared/registration-footer'